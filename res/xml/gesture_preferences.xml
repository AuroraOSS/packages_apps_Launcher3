<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:defaultValue="@bool/allow_rotation"
        android:key="pref_allowRotation"
        android:persistent="true"
        android:summary="@string/allow_rotation_desc"
        android:title="@string/allow_rotation_title" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="pref_notifications_gesture"
        android:persistent="true"
        android:summary="@string/pref_notifications_gesture_summary"
        android:title="@string/pref_notifications_gesture_title" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="pref_doubletap_gesture"
        android:persistent="true"
        android:summary="DT2S on home screen (System only)"
        android:title="Home screen gesture" />
</androidx.preference.PreferenceScreen>
