<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PreferenceTheme.Dark" parent="@android:style/Theme.DeviceDefault">
        <item name="android:colorPrimary">@color/gray_dark</item>
        <item name="android:colorPrimaryDark">@color/gray_dark</item>
        <item name="android:windowBackground">@color/gray_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarColor">@color/gray_dark</item>
        <item name="isMainColorDark">true</item>
    </style>

    <style name="PreferenceTheme" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:colorPrimary">@android:color/white</item>
        <item name="android:colorPrimaryDark">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="isMainColorDark">false</item>
    </style>
</resources>